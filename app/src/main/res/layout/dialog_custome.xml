<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_cor5_fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="你还没有收货地址，先去设置吧"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/gl_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>


    <View
        android:id="@+id/v_left"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#ddd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gl_v"
        app:layout_constraintTop_toBottomOf="@+id/tv_message"/>

    <View
        android:id="@+id/v_right"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#d70522"
        app:layout_constraintLeft_toRightOf="@+id/gl_v"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_message"/>


    <TextView
        android:background="@drawable/shape_cor5_bottomleft_fff"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="取消"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gl_v"
        app:layout_constraintTop_toBottomOf="@+id/v_left"/>

    <TextView
        android:textColor="#fff"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_cor5_d70522"
        android:text="确定"
        app:layout_constraintLeft_toRightOf="@+id/gl_v"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_right"/>

</android.support.constraint.ConstraintLayout>